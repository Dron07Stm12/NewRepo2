<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Scb_Electronmash.MainPage"
               BackgroundColor="#0A5F74"
             Shell.NavBarIsVisible="True"
             Title="Меню     ВАРТА 816"
            
             >


    <!-- Ваш существующий XAML-код без изменений -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="0,2" Spacing="2">
                <Border Stroke="#0B0101" StrokeThickness="2" StrokeShape="RoundRectangle 14" BackgroundColor="#b3d6bf" Padding="5" Margin="5" HeightRequest="220">
                    <ScrollView x:Name="scrollView" VerticalOptions="Fill">
                        <Label x:Name="label4"
                               Text="receive data"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="Black"
                               LineBreakMode="WordWrap"
                               VerticalTextAlignment="Start"
                               HorizontalTextAlignment="Start" />
                    </ScrollView>
                </Border>
                <Grid Margin="1" ColumnDefinitions="*,*,*" ColumnSpacing="8">
                    <Button Margin="8"
                            x:Name="CounterBtn"
                            Text="Rx"
                            FontAttributes="Bold"
                            FontSize="14"
                            TextColor="White"
                            BackgroundColor="#1E1033"
                            SemanticProperties.Hint="Counts the number of times you click"
                            Clicked="OnCounterClicked"
                            HorizontalOptions="Fill"
                            Grid.Column="0" />
                    <Button Margin="8"
                            Text="Clear data"
                            FontAttributes="Bold"
                            FontSize="14"
                            TextColor="#01010d"
                            BackgroundColor="#b3d6bf"
                            Clicked="OnClear_Data_Dev"
                            Grid.Column="1" />
                    <Button Margin="8"
                            Text="Tx"
                            FontAttributes="Bold"
                            FontSize="14"
                            TextColor="#ffffff"
                            BackgroundColor="#082F08"
                            Clicked="OnCounterClicked_Tx"
                            Grid.Column="2" />
                </Grid>
                <CarouselView x:Name="MainCarousel"
                             HeightRequest="360"
                             IsSwipeEnabled="True"
                             IndicatorView="indicators"
                             CurrentItemChanged="MainCarousel_CurrentItemChanged"
                             VerticalOptions="Start"
                             HorizontalOptions="Fill"
                             PeekAreaInsets="0">
                    <CarouselView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"
                                           ItemSpacing="0"
                                           SnapPointsType="MandatorySingle"
                                           SnapPointsAlignment="Center" />
                    </CarouselView.ItemsLayout>
                    <CarouselView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Страница 1:</x:String>
                            <x:String>Страница 2:</x:String>
                            <x:String>Страница 3:</x:String>
                            <x:String>Страница 4:</x:String>
                            <x:String>Страница 5:</x:String>
                            <x:String>Страница 6:</x:String>
                            <x:String>Страница 7:</x:String>
                            <x:String>Страница 8:</x:String>
                            <x:String>Страница 9:</x:String>
                            <x:String>Страница 10:</x:String>
                            <x:String>Страница 11:</x:String>
                            <x:String>Страница 12:</x:String>
                        </x:Array>
                    </CarouselView.ItemsSource>
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" HorizontalOptions="Fill" VerticalOptions="Fill">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackLayout x:Name="SimpleLabelBlock"
                                             Grid.Row="0"
                                             HorizontalOptions="Fill"
                                             VerticalOptions="Start"
                                             IsVisible="True"
                                             Margin="8,0,8,6">
                                    <Label Text="{Binding .}"
                                           TextColor="White"
                                           FontSize="16"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start"
                                           LineBreakMode="WordWrap" />
                                    <StackLayout.Triggers>

                                        <!-- скрываем общий заголовок на странице 1 -->
                                        <DataTrigger TargetType="StackLayout" Binding="{Binding .}" Value="Страница 1:">
                                            <Setter Property="IsVisible" Value="False" />
                                        </DataTrigger>

                                        <!-- скрываем общий заголовок на странице 2 -->
                                        <DataTrigger TargetType="StackLayout" Binding="{Binding .}" Value="Страница 2:">
                                            <Setter Property="IsVisible" Value="False" />
                                        </DataTrigger>


                                        <DataTrigger TargetType="StackLayout" Binding="{Binding .}" Value="Страница 4:">
                                            <Setter Property="IsVisible" Value="False" />
                                        </DataTrigger>
                                    </StackLayout.Triggers>
                                </StackLayout>


                                <!-- Кнопка, видимая только на "Страница 1:" -->
                                <!-- Page1Block: локальный заголовок + одна плитка (стиль как у Page4) -->
                                <VerticalStackLayout x:Name="Page1Block"
                                                     Grid.Row="1"
                                                     IsVisible="False"
                                                     VerticalOptions="Start"
                                                     Spacing="6"
                                                     Margin="8,0,8,0"
                                                     HorizontalOptions="Start">
                                    <Label Text="Страница 1 — ODE_Manufacturer_Device_Name"
                                           TextColor="Black"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Start" />

                                    <Grid ColumnDefinitions="*" RowDefinitions="Auto" ColumnSpacing="2" RowSpacing="8" HorizontalOptions="Fill">
                                        <Border Grid.Row="0" Grid.Column="0"
                                                Stroke="#0B0101"
                                                StrokeThickness="1"
                                                StrokeShape="RoundRectangle 8"
                                                BackgroundColor="#107f36"
                                                Padding="6"
                                                Margin="0"
                                                HeightRequest="48"
                                                HorizontalOptions="Start">
                                            <Border.GestureRecognizers>
                                                <!-- можно использовать OnShleyfTapped или OnPage1Tapped -->
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="1|Device_Name" />
                                            </Border.GestureRecognizers>

                                            <Label Text="Device_Name"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   InputTransparent="True"
                                                   TextColor="#000"
                                                   FontAttributes="Bold"
                                                   LineBreakMode="WordWrap"
                                                   HorizontalTextAlignment="Center"
                                                   VerticalTextAlignment="Center" />
                                        </Border>
                                    </Grid>

                                    <VerticalStackLayout.Triggers>
                                        <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding .}" Value="Страница 1:">
                                            <Setter Property="IsVisible" Value="True" />
                                        </DataTrigger>
                                    </VerticalStackLayout.Triggers>
                                </VerticalStackLayout>



                                
                                <!-- Page2Block: плитки одна под другой (вертикально). 
                                Вставьте этот фрагмент внутрь вашего DataTemplate, заменив текущий Page2Block -->
                                <VerticalStackLayout x:Name="Page2Block"
                                     Grid.Row="1"
                                     IsVisible="False"
                                     VerticalOptions="Start"
                                     Spacing="8"
                                     Margin="8,0,8,0"
                                     HorizontalOptions="Fill">

                                    <Label Text="Страница 2 — TK_SETTINGS"
                                   TextColor="Black"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Start" />

                                    <!-- Вертикальный список плиток (каждая плитка — Border с TapGestureRecognizer) -->
                                    <VerticalStackLayout Spacing="6" HorizontalOptions="Fill">

                                        <!-- Замените текущий Border (первую плитку) на этот Grid -->
                                        <Grid ColumnDefinitions="*,Auto" HorizontalOptions="Fill" VerticalOptions="Center" Margin="0">
                                            <!-- Колонка 0: сама "кнопка" -->
                                            <Border Grid.Column="0"
                                                Stroke="#0B0101"
                                                StrokeThickness="1"
                                                StrokeShape="RoundRectangle 6"
                                                BackgroundColor="#107f36"
                                                Padding="8"
                                                HeightRequest="40"
                                                HorizontalOptions="Fill">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="2|ServerPort1" />
                                                </Border.GestureRecognizers>

                                                <Label Text="Config.ServerPort_1"
                                                   VerticalOptions="Center"
                                                   HorizontalOptions="Start"
                                                   InputTransparent="True"
                                                   TextColor="#000"
                                                   FontAttributes="Bold" />
                                            </Border>

                                            <!-- Колонка 1: поле ввода вне "кнопки" -->
                                            <Entry x:Name="ServerPort1Entry"
                                               Grid.Column="1"
                                               WidthRequest="120"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End"
                                               Margin="8,0,0,0"
                                               Text=""
                                               Keyboard="Numeric"
                                               BackgroundColor="Transparent"/>
                                        </Grid>


                                        <Border Stroke="#0B0101"
                                                StrokeThickness="1"
                                                StrokeShape="RoundRectangle 6"
                                                BackgroundColor="#107f36"
                                                Padding="8"
                                                HeightRequest="40"
                                                HorizontalOptions="Fill">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="2|ServerPort2" />
                                            </Border.GestureRecognizers>
                                            <Label Text="Config.ServerPort_2"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               InputTransparent="True"
                                               TextColor="#000"
                                               FontAttributes="Bold" />
                                        </Border>

                                        <Border Stroke="#0B0101"
                                            StrokeThickness="1"
                                            StrokeShape="RoundRectangle 6"
                                            BackgroundColor="#107f36"
                                            Padding="8"
                                            HeightRequest="40"
                                            HorizontalOptions="Fill">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="2|ipServer1" />
                                            </Border.GestureRecognizers>
                                            <Label Text="Config.IpServer_1"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           InputTransparent="True"
                                           TextColor="#000"
                                           FontAttributes="Bold" />
                                        </Border>

                                        <Border Stroke="#0B0101"
                                            StrokeThickness="1"
                                            StrokeShape="RoundRectangle 6"
                                            BackgroundColor="#107f36"
                                            Padding="8"
                                            HeightRequest="40"
                                            HorizontalOptions="Fill">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="2|ipServer2" />
                                            </Border.GestureRecognizers>
                                            <Label Text="Config.IpServer_2"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               InputTransparent="True"
                                               TextColor="#000"
                                               FontAttributes="Bold" />
                                        </Border>

                                        <Border Stroke="#0B0101"
                                         StrokeThickness="1"
                                         StrokeShape="RoundRectangle 6"
                                         BackgroundColor="#107f36"
                                         Padding="8"
                                         HeightRequest="40"
                                         HorizontalOptions="Fill">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="2|SMSPhone1" />
                                            </Border.GestureRecognizers>
                                            <Label Text="Config.SMSPhone_1"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center"
                                                    InputTransparent="True"
                                                    TextColor="#000"
                                                    FontAttributes="Bold" />
                                        </Border>

                                    </VerticalStackLayout>

                                    <VerticalStackLayout.Triggers>
                                        <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding .}" Value="Страница 2:">
                                            <Setter Property="IsVisible" Value="True" />
                                        </DataTrigger>
                                    </VerticalStackLayout.Triggers>
                                </VerticalStackLayout>





                                <!--  текущий VerticalStackLayout x:Name="Page4Block" на этот блок -->
                                <VerticalStackLayout x:Name="Page4Block"
                                     Grid.Row="1"
                                     IsVisible="False"
                                     VerticalOptions="Start"
                                     Spacing="6"
                                     Margin="8,0,8,0"
                                     HorizontalOptions="Start">
                                    <Label Text="Страница 4 — Ток шлейфов"
                                       TextColor="Black"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Start" />

                                    <Grid ColumnDefinitions="*,*,*,*"
                                      RowDefinitions="Auto,Auto,Auto,Auto"
                                      ColumnSpacing="2"
                                      RowSpacing="8"
                                      HorizontalOptions="Fill">
                                        <!-- 16 кнопок: ток шлейфа 1..16 -->
                                        <!-- Ряд 0 -->
                                        <Border Grid.Row="0" Grid.Column="0" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                                         BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf1" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 1" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="0" Grid.Column="1" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf2" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 2" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="0" Grid.Column="2" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf3" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 3" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="0" Grid.Column="3" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf4" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 4" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <!-- Ряд 1 -->
                                        <Border Grid.Row="1" Grid.Column="0" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf5" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 5" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="1" Grid.Column="1" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf6" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 6" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="1" Grid.Column="2" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf7" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 7" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="1" Grid.Column="3" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf8" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 8" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <!-- Ряд 2 -->
                                        <Border Grid.Row="2" Grid.Column="0" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf9" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 9" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="2" Grid.Column="1" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf10" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 10" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="2" Grid.Column="2" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf11" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 11" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="2" Grid.Column="3" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf12" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 12" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <!-- Ряд 3 -->
                                        <Border Grid.Row="3" Grid.Column="0" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf13" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 13" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="3" Grid.Column="1" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf14" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 14" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="3" Grid.Column="2" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf15" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 15" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>

                                        <Border Grid.Row="3" Grid.Column="3" Stroke="#0B0101" StrokeThickness="1" StrokeShape="RoundRectangle 8"
                BackgroundColor="#107f36" Padding="4" Margin="0" HeightRequest="44">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnShleyfTapped" CommandParameter="4|tokshelyf16" />
                                            </Border.GestureRecognizers>
                                            <Label Text="ток шлейфа 16" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" TextColor="#000" FontAttributes="Bold" />
                                        </Border>
                                    </Grid>

                                    <!-- показывать Page4Block только для Страница 4 (ваш триггер оставьте как есть) -->
                                    <VerticalStackLayout.Triggers>
                                        <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding .}" Value="Страница 4:">
                                            <Setter Property="IsVisible" Value="True" />
                                        </DataTrigger>
                                    </VerticalStackLayout.Triggers>
                                </VerticalStackLayout>
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
            </VerticalStackLayout>
        </ScrollView>
        <IndicatorView x:Name="indicators"
                       Grid.Row="1"
                       IndicatorColor="LightGray"
                       SelectedIndicatorColor="#361861"
                       HorizontalOptions="Center"
                       VerticalOptions="End"
                       Margin="0,6,0,12" />
    </Grid>
</ContentPage>